local running = true

local C = {}
  C[1] = {"clear", function() term.setBackgroundColor(colors.white) term.clear() end}
  C[2] = {"print", function(s) print(tostring(s)) end}

function start()
  while running do
    fixUI()
    input()
  end
end

function input()
  local s = read()
  pars = {}
  for par in s:gmatch("%w+") do table.insert(pars, par) end
  for i,v in ipairs(C) do
    if pars[1] v[1] then pars[1] = nil v[2](unpack(pars)) end
  end
end

function fixUI()
  term.setTextColor(colors.black)
  term.setBackgroundColor(colors.white)
end

start()
